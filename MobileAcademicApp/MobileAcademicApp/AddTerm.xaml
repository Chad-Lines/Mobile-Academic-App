<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAcademicApp.AddTerm">
    
    <!-- ADD TERM -->

    <StackLayout Margin="20, 20, 20, 0">

        <!-- The Add Term Label -->
        <Label Text="Add Term" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <!-- Defining the fields we need to add a new term -->
        <Entry Placeholder="Term Name" IsSpellCheckEnabled="false"/>
        <Label Text="Start Date"/>
        <DatePicker/>
        <Label Text="End Date"/>
        <DatePicker/>
        
        <!-- Show already added courses (TODO) -->
        
        
        <!-- Allow the user to add a new course to the term -->
        <Button Text="Add New Course" x:Name="addNewCourseButton" Clicked="addNewCourseButton_Clicked"/>

        <!-- Saving the new term -->
        <Button Text="Save" 
                BackgroundColor="DodgerBlue"
                TextColor="White"
                x:Name="saveTermButton"                 
                Clicked="saveTermButton_Clicked"/>
    </StackLayout>
    
</ContentPage>