<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAcademicApp.AddAssessment">

    <!-- ADD ASSESSMENT -->
    
    <StackLayout Margin="20, 20, 20, 0">

        <!-- The Add Assessment Label -->
        <Label Text="Add Assessment" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <!-- Defining the fields we need to add a new course -->
        <Entry Placeholder="Assessment Name" IsSpellCheckEnabled="false"/>
        <Label Text="Due Date"/>
        <DatePicker/>        
        <Picker Title="Assessment Type"/>
            <!-- Add options for Objective and Performance Assessments -->

        <!-- Saving the new assessment -->
        <Button Text="Save Assessment" 
                BackgroundColor="DodgerBlue"
                TextColor="White"
                x:Name="saveAssessmentButton" 
                Clicked="saveAssessmentButton_Clicked"/>

    </StackLayout>
</ContentPage>